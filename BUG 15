    <script>
        // Data
        const apartments = [
            { id: '1A', rooms: '3.5', floor: 'EG', area: '120', status: 'verfÃ¼gbar', price: 'CHF 890,000' },
            { id: '1B', rooms: '4.5', floor: 'EG', area: '150', status: 'verkauft', price: 'CHF 1,200,000' },
            { id: '2A', rooms: '3.5', floor: 'OG', area: '120', status: 'verfÃ¼gbar', price: 'CHF 920,000' },
            { id: '2B', rooms: '4.5', floor: 'OG', area: '150', status: 'verfÃ¼gbar', price: 'CHF 1,250,000' }
        ];

        const galleryImages = [
            { url: 'https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=1200', title: 'Aussenansicht' },
            { url: 'https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=1200', title: 'Wohnzimmer' },
            { url: 'https://images.unsplash.com/photo-1600210492493-0946911123ea?w=1200', title: 'KÃ¼che' },
            { url: 'https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=1200', title: 'Schlafzimmer' },
            { url: 'https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=1200', title: 'Badezimmer' },
            { url: 'https://images.unsplash.com/photo-1600047509807-ba8f99d2cdde?w=1200', title: 'Balkon' }
        ];

        // Generate apartment cards
        const cardsContainer = document.getElementById('apartment-cards');
        apartments.forEach(apt => {
            const card = document.createElement('div');
            card.className = 'bg-white border border-gray-200 rounded-lg p-6 cursor-pointer hover:shadow-xl transition-shadow duration-300';
            card.onclick = () => openModal(apt);
            card.innerHTML = `
                <div class="flex justify-between items-start mb-4">
                    <h3 class="text-2xl font-serif">Wohnung ${apt.id}</h3>
                    <span class="px-3 py-1 text-xs font-medium rounded-full ${
                        apt.status === 'verfÃ¼gbar' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-500'
                    }">${apt.status}</span>
                </div>
                <div class="space-y-2 text-sm text-gray-600">
                    <p><span class="font-medium">Zimmer:</span> ${apt.rooms}</p>
                    <p><span class="font-medium">FlÃ¤che:</span> ${apt.area} mÂ²</p>
                    <p><span class="font-medium">Etage:</span> ${apt.floor}</p>
                    <p class="text-lg font-serif text-black mt-4">${apt.price}</p>
                </div>
            `;
            cardsContainer.appendChild(card);
        });

        // Generate gallery
        const galleryGrid = document.getElementById('gallery-grid');
        galleryImages.forEach(img => {
            const item = document.createElement('div');
            item.className = 'gallery-item relative overflow-hidden rounded-lg aspect-[4/3]';
            item.onclick = () => openLightbox(img.url);
            item.innerHTML = `
                <img src="${img.url}" alt="${img.title}" class="w-full h-full object-cover">
                <div class="gallery-overlay">
                    <p class="text-white text-lg font-serif">${img.title}</p>
                </div>
            `;
            galleryGrid.appendChild(item);
        });

        // Floor plan interactions
        document.querySelectorAll('.apartment-unit').forEach(unit => {
            unit.addEventListener('click', function() {
                const aptId = this.getAttribute('data-apt');
                const apt = apartments.find(a => a.id === aptId);
                openModal(apt);
            });
        });

        // Modal functions
        function openModal(apt) {
            document.getElementById('modal-title').textContent = 'Wohnung ' + apt.id;
            document.getElementById('modal-details').innerHTML = `
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-600 mb-1">Zimmer</p>
                    <p class="text-2xl font-serif">${apt.rooms}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-600 mb-1">FlÃ¤che</p>
                    <p class="text-2xl font-serif">${apt.area} mÂ²</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-600 mb-1">Etage</p>
                    <p class="text-2xl font-serif">${apt.floor}</p>
                </div>
                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm text-gray-600 mb-1">Preis</p>
                    <p class="text-2xl font-serif">${apt.price}</p>
                </div>
            `;
            document.getElementById('modal-status').textContent = apt.status.toUpperCase();
            document.getElementById('modal-status').className = `inline-block px-4 py-2 rounded-full text-sm font-medium ${
                apt.status === 'verfÃ¼gbar' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600'
            }`;
            document.getElementById('apartment-modal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('apartment-modal').classList.remove('active');
        }

        function openLightbox(url) {
            document.getElementById('lightbox-img').src = url;
            document.getElementById('lightbox').classList.add('active');
        }

        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
        }

        // Close modals on outside click
        document.getElementById('apartment-modal').addEventListener('click', function(e) {
            if (e.target === this) closeModal();
        });

        document.getElementById('lightbox').addEventListener('click', function(e) {
            if (e.target === this) closeLightbox();
        });
    </script>
</body>
